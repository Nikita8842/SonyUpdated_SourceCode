@model AMBOModels.UserValidation.UserValidationModel
@using CaptchaMvc.HtmlHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>WhizT Ambo | Log in</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/ionicons/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/Content/css/basetheme.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/iCheck/square/blue.css" rel="stylesheet" />
    <link href="~/Content/plugins/noty-3.1.4/css/noty.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <script src="https://www.google.com/recaptcha/api.js"></script>
    <link href="~/Content/css/normalize.css" rel="stylesheet" />
    @*<link href="~/Content/css/login.css" rel="stylesheet" />
    <link href="~/Content/css/media.css" rel="stylesheet" />*@
    <link href="~/Content/css/login-5.min.css" rel="stylesheet" />
    <link href="~/Content/css/components.min.css" rel="stylesheet" />
    <script src="~/Content/js/jquery.min.js"></script>
    
    <style type="text/css">
        .user-login-5 .login-container {
            background-color: #f6f6f6;
        }

        @@media (max-width: 1023px) {
            .user-login-5 .login-container > .login-content .login-form {
                margin-top: 40px;
            }

            .user-login-5 .login-container > .login-content {
                text-align: center;
            }

            .user-login-5 .login-container > .login-content {
                margin-top: 0px;
            }

            .user-login-5 .login-logo {
                position: inherit !important;
            }
        }

        .page-header-fixed .page-container {
            margin-top: 0px !important;
        }
        .login-form input {
        font-size: 17px !important;
        color: #000 !important;
    }

    .divTerms {
        float: right;
        margin-top: 14px;
        font-size: 15px;
    }

    #lnkHome {
        color: #fff;
    }
    #imgLogo
    {
        left: 2em!important;
    top: 1em!important;
    }
    #imgLogo1
    {
                left: 2.2em!important;
    top: 1em!important;
    }
    .font-green
    {
            color: #151515!important;
    }
    .user-login-5 .login-container>.login-content>.login-form input
    {
            border: 1px solid #b1adad;
    border-radius: 5px!important;
    }
    #CaptchaInputText{
        height:34px;
    }
    button
    {
            border-radius: 5px!important;
    }
    </style>
</head>
<body class="login">
    <div class="user-login-5 large-header" id="large-header">
        <div class="row bs-reset">
            <div class="col-md-8 bs-reset">
                <div class="login-bg" style="background-image:url(../../Content/img/sony2.jpg)">
                    @*<img id="imgLogo" class="login-logo" src="~/Content/img/ambo_logo.png" />*@
                </div>
            </div>
            <div class="col-md-4 login-container bs-reset">
                <div class="login-content">
                    <img id="imgLogo1" class="login-logo" src="~/Content/img/whizTambologo.png" style="left: 11em;top: 6em;" />
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "login-form" }))
                    {
                        <h4 class="form-title font-green">Sign In</h4>
                        <div class="form-group">
                            <label class="control-label visible-ie8 visible-ie9">Username</label>
                            @Html.TextBoxFor(x => x.UserName, new { @id = "tbUsername", @class = "form-control form-control-solid placeholder-no-fix", @placeholder = "Type Username Here...", required = "required" })
                        </div>
                        <div class="form-group">
                            <label class="control-label visible-ie8 visible-ie9">Password</label>
                            @Html.PasswordFor(x => x.UserPassword, new { @id = "tbPassword", @class = "form-control form-control-solid placeholder-no-fix", @placeholder = "Type Password Here...", required = "required" })
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                @*<div style="margin-left: 18px;width:100% !important" class="g-recaptcha" data-sitekey="6LemZlgUAAAAAAZZn1J__a5GghaMJKy3CGAFOqJM"></div>*@
                                @Html.Captcha(4)
                            </div>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn green uppercase btn-block">Sign In</button>
                        </div>
                        <br />
                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>
                            <span> Enter username and password. </span>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>

    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/plugins/iCheck/icheck.min.js"></script>
    <script src="~/Content/plugins/noty-3.1.4/js/noty.min.js"></script>
    <script src="~/Content/js/common.js"></script>
    <script src="~/Content/js/TweenLite.min.js"></script>
    <script src="~/Content/js/EasePack.min.js"></script>
    <script src="~/Content/js/rAF.js"></script>
    <script src="~/Content/js/jquery.backstretch.min.js"></script>
    <script src="~/Content/plugins/jquery-validation-1.17.0/jquery.validate.min.js"></script>
<script src="~/Content/js/login-5.min.js"></script>
    @*<script src="~/Content/js/login.js"></script>*@

    <script>
        @if(TempData.ContainsKey("Notification"))
        {
            var Notifications = TempData["Notification"] as List<AMBOWeb.Controllers.SonyNotification>;
            foreach(AMBOWeb.Controllers.SonyNotification Notification in Notifications)
            {
                @Html.Raw("common.notify('"+ Notification.Type + "','" + Notification.Message + "');")
            }
        }

            $(document).ready(function () {
                $('#tbUsername').focus();
            history.pushState(null, document.title, location.href);
            window.addEventListener('popstate', function (event) {
                history.pushState(null, document.title, location.href);
                });
            });
    </script>
</body>
</html>
