</style>
}



<div class="row" id="targetfilter">

    <div class="col-lg-12">
        <div class="box box-solid">
            <div class="box-body">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label>Target Month : </label>
                            @Html.TextBoxFor(m => m.TargetDate, new { @class = "form-control input-sm", @id = "txtMonth" }) 
