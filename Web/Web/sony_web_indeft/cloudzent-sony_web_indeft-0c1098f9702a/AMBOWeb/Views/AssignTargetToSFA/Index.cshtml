@model AMBOModels.Mappings.AssignTargetToSFAGet
@using System.Data;

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section PageCSS{
    <style>
    .ui-datepicker-calendar {
        display: none;
