@using AMBOWeb.Classes;
@model AMBOModels.UserManagement.EmployeeGridSearchFilters

<div class="row">
    <div class="col-lg-12">
        <div class="box box-primary box-solid" id="filterBox">
            <div class="box-header with-border text-center" id="filterBoxHeader" data-widget="collapse">
                <h3 class="box-title">Employee Master Filters</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" id="collapseFilters">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-lg-6">
                        @Html.AmboDropdownMultipleFor(Model => Model.BranchIds, "ddBranch", "Branch:", "ddBranch")
                    </div>
                    <div class="col-lg-6">
                        @Html.AmboDropdownMultipleFor(Model => Model.StateIds, "ddState", "State:", "ddState")
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        @Html.AmboDropdownMultipleFor(Model => Model.CityIds, "ddCity", "City:", "ddCity")
                    </div>
                    <div class="col-lg-6">
                        @Html.AmboDropdownFor(Model => Model.Status, "ddStatus", "Status:", "ddStatus")
                    </div>
                </div>
                <div class="row">
                        <div class="col-lg-3">
                            @Html.AmboTextboxFor(Model => Model.LoginId, "txtLoginId", "Login Id:", "Enter Login Id here...", "", "")
                        </div>
                        <div class="col-lg-3">
                            @Html.AmboTextboxFor(Model => Model.EmployeeName, "txtEmployeeName", "Employee Name:", "Enter Employee Name here...", "", "")
                        </div>
                        <div class="col-lg-6">
                            <br />
                            <button class="btn btn-flat btn-primary" type="button" id="btnSearch"><i class="fa fa-search"></i> Search</button>
                            &emsp;<button id="btnDownload" type="button" class="btn btn-success btn-flat"><i class="fa fa-download"></i> Download to Excel</button>
                            &emsp;<button id="btnAdd" type="button" class="btn btn-primary btn-flat"><i class="fa fa-plus"></i> Add New</button>                            
                            &emsp;<button class="btn btn-flat btn-default" type="button" onclick="$(location).attr('href','@Url.Action("Index","Dashboard")');"><i class="fa fa-mail-reply"></i> Exit</button>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>